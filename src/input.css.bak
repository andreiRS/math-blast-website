@tailwind base;
@tailwind components;
@tailwind utilities;

@layer base {
  html {
    scroll-behavior: smooth;
  }
}

@layer components {
  .btn {
    @apply px-6 py-3 rounded-full font-semibold transition-all duration-300 transform hover:-translate-y-0.5;
  }
  .btn-primary {
    @apply bg-accent text-white hover:bg-accent/90;
  }
  .btn-secondary {
    @apply bg-white text-primary hover:bg-gray-50;
  }
}
